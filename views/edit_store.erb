<h2><%=@store.store_name %></h2>

<form action="/edit_store/<%=@store.id%>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="patch">
    <label for="store_name"> Update store name to: </label>
    <input id="store_name" name="store_name" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-warning">Update store</button>
</form>

<form action="/edit_store/<%=@store.id%>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="delete">
  </div>
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
